<Window x:Class="InvoiceManagementTool.Windows.ManagerAccessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvoiceManagementTool.Windows"
        mc:Ignorable="d"
        Title="ManagerAccessWindow" Height="120" Width="120" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <Button Name="ShowProductsButton" Content="Show products" Width="90" HorizontalAlignment="Center" Margin="0,20,0,0" Click="ShowProductsButton_Click"/>
            <Button Name="AddProductButton" Content="Add product" Width="90" HorizontalAlignment="Center" Margin="0,20,0,0" Click="AddProductButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
